<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageView_menu_bck"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/subcatbg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_menu_bck"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_plates_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/main_dummy_title"
            android:textSize="30sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_plates_title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_dummy_title"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView1_textView_plates_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
             />
    </LinearLayout>

</RelativeLayout>